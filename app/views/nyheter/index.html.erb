<div class="container">
	<h1>Nyheter</h1><br />
	
	<% @news.each do |nyhet| %>
		<h2><%= link_to nyhet.title, '/nyheter/'+nyhet.id.to_s %></h2>
 	    <b><%= nyhet.serie.name %></b> <i>| Publisert <%= l(nyhet.created_at,:format => '%d. %B %Y')	 %></i><br /><br />
		<%= nyhet.content.html_safe %>
	<% end %>	
</div>

