<div class="container">
	<h1>Nyheter</h1><br />
	
	<% @news.each do |nyhet| %>
		
		<h2><%= link_to nyhet.title, '/nyheter/'+nyhet.id.to_s %></h2>
 	    <b><%= nyhet.serie.name %></b> <i>| Publisert <%= l(nyhet.created_at,:format => '%d. %B %Y')	 %></i><br /><br />
		<div style="padding-right:10px;float:<%= cycle('left', 'right') %>"><%= image_tag nyhet.photo.url(:medium) unless nyhet.photo.url.nil?  %></div>
		<%= nyhet.content.html_safe %>
		<div class="clearfix"></div>
	<% end %>	
</div>

