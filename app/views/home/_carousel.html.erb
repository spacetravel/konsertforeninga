<!--  Carousel - consult the Twitter Bootstrap docs at
      http://twitter.github.com/bootstrap/javascript.html#carousel -->

<div id="konsertkarusell" class="carousel slide"><!-- class of slide for animation -->
  <div class="carousel-inner" >
    <div class="item active" ><!-- class of active since it's the first item -->
      <%= link_to image_tag(@concerts.first.photo.url(:large), :style => "margin:0px auto;"), '/konserter/' + @concerts.first.id.to_s  %>
      <div class="carousel-caption">
        <p><div class="linkkarusell"><%= link_to @concerts.first.serie.name+': '+@concerts.first.title, '/konserter/' + @concerts.first.id.to_s %></div><br />
              <%= l(@concerts.first.show_date,:format => '%d. %B %Y') %> | <%= @concerts.first.price %></p>
      </div>
    </div>
<% @concerts.each do |concert| %>
    <% unless concert.id == @concerts.first.id %>
    <div class="item" ><!-- class of active since it's the first item -->
       <%= link_to image_tag(concert.photo.url(:large),:style => "margin:0px auto;"), '/konserter/' + concert.id.to_s %>
      <div class="carousel-caption">
        <p><div class="linkkarusell">
            <%= link_to concert.serie.name+': '+concert.title, '/konserter/' + concert.id.to_s %></div><br />
              <%= l(concert.show_date,:format => '%d. %B %Y') %> | <%= concert.price %>
        </p>
      </div>
    </div>
    <% end %>
<% end %>

  </div><!-- /.carousel-inner -->
  <!--  Next and Previous controls below
        href values must reference the id for this carousel -->
    <a class="carousel-control left" href="#konsertkarusell" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#konsertkarusell" data-slide="next">&rsaquo;</a>
</div><!-- /.carousel -->

